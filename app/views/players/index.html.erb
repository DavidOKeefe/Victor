<h1><%= link_to @game.name, edit_game_path(@game) %></h1>

<%= link_to "Add a Player", new_game_player_path %>

<ul class="players">
  <% @players.each do |player| %>
    <li><%= link_to player.name, edit_game_player_path(@game, player) %></li>
  <% end %>
</ul>

<%= button_to "Start Game", game_scorecard_path, method: 'get' %>
